 @{
    ViewBag.Title = "PreSales Calendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.AntiForgeryToken()

<div class="calendar-dashboard">
    <div class="calendar-header">PreSales Calendar</div>

    <div class="calendar-content">
        <div class="calendar-inline-picker" id="calendarFlatContainer"></div>

        <div class="table-container">
            <table id="preSalesCalendarTable" class="table display table-bordered table-striped w-100">
                <thead class="table-light">
                    <tr>
                        <th data-orderable="false">Edit</th>
                        <th>Agent</th>
                        <th>MPAN</th>
                        <th>MPRN</th>
                        <th>Post Code</th>
                        <th>Business Name</th>
                        <th>Supplier</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<!-- Edit Contract Notes Popup -->
@Html.Partial("~/Views/PreSales/EditContractNotesPopup.cshtml", new CobanaEnergy.Project.Models.PreSales.EditContractNotesPopupViewModel())

@section styles {
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet" />
    <link href="~/Content/PreSales/PreSalesCalendar/PreSalesCalendar.css" rel="stylesheet" />
}

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="~/Scripts/PreSales/PreSalesCalendar/preSalesCalendar.js"></script>
}
