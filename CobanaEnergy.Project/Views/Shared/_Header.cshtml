@using Microsoft.AspNet.Identity

<header class="navbar navbar-expand-lg navbar-dark bg-dark px-4 py-3 custom-navbar">
    <a class="navbar-brand fw-bold text-warning" href="/">Cobana Energy</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
    </button>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav align-items-center gap-4">
                @if (User.IsInRole("Pre-sales") || User.IsInRole("Controls"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="preSalesMenu" data-bs-toggle="dropdown">
                            <i class="fas fa-briefcase me-1"></i> Pre-Sales
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/PreSales/Dashboard"><i class="fas fa-chart-line me-2"></i>Dashboard</a></li>
                            <li><a class="dropdown-item" href="/Electric/CreateElectric"><i class="fas fa-bolt me-2"></i>Electric Contract</a></li>
                            <li><a class="dropdown-item" href="/Gas/CreateGas"><i class="fas fa-fire me-2"></i>Gas Contract</a></li>
                            <li><a class="dropdown-item" href="/Dual/CreateDual"><i class="fas fa-plug me-2"></i>Dual Contract</a></li>
                        </ul>
                    </li>
                }

                @if (User.IsInRole("Controls"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="adminMenu" data-bs-toggle="dropdown">
                            <i class="fas fa-sliders-h me-1"></i> Controls
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="/Account/Create">
                                    <i class="fas fa-user-plus me-2"></i> Create New User
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Account/ChangePassword">
                                    <i class="fas fa-key me-2"></i> Change User Password
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="supplierMenu" data-bs-toggle="dropdown">
                            <i class="fas fa-industry me-1"></i> Supplier
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="/Supplier/SupplierCreation">
                                    <i class="fas fa-plus-circle me-2"></i> Create Supplier
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Supplier/SupplierDashboard">
                                    <i class="fas fa-table me-2"></i> Supplier Dashboard
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                @if (User.IsInRole("Controls") || User.IsInRole("Accounts"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="accountsMenu" data-bs-toggle="dropdown">
                            <i class="fas fa-user-cog me-1"></i> Accounts
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="#" id="openInvoiceSupplierDashboard">
                                    <i class="fas fa-file-invoice-dollar me-2"></i> Invoice Supplier Dashboard
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white fw-bold" href="#" data-bs-toggle="dropdown">
                        <i class="fas fa-user-circle me-1"></i> @User.Identity.GetUserName()
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                        <li>
                            <form id="logoutForm" action="/Account/Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    }
</header>
