@{
    ViewBag.Title = "Suppliers Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Controls"))
{
    <div class="supplier-dashboard-container">
        <h2 class="page-heading">Active Suppliers Dashboard</h2>

        <table id="suppliersTable" class="table display table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Supplier Name</th>
                    <th>Product Name</th>
                    <th>Commission</th>
                    @*<th>Status</th>*@
                    @*<th>Action</th>*@
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    @section styles {
        <link href="~/Content/Supplier/SupplierDashboard.css" rel="stylesheet" />
    }

    @section scripts {
        <script src="~/Scripts/Supplier/supplierDashboard.js"></script>
    }

}
else
{
    <div class="alert alert-danger text-center mt-5">
        <h4>Access Denied</h4>
        <p>You are not authorized to view this page.</p>
    </div>
}