@model CobanaEnergy.Project.Models.Accounts.ReconciliationsDashboard.ReconciliationsDashboardViewModel
@{
    ViewBag.Title = "Reconciliations Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="reconciliations-dashboard">
    <div class="dashboard-title">
        Reconciliations Dashboard
    </div>
    <div class="filters d-flex flex-wrap gap-4 mb-4 align-items-end">
        <div>
            <label for="supplierFilter" class="form-label fw-semibold">Supplier</label>
            @Html.DropDownListFor(m => m.SupplierId, Model.Suppliers, "All Suppliers", new { @class = "form-select", id = "supplierFilter" })
        </div>
        <div>
            <label for="startDateFilter" class="form-label fw-semibold">Input Date From</label>
            <input type="date" id="startDateFilter" class="form-control" />
        </div>
        <div>
            <label for="endDateFilter" class="form-label fw-semibold">Input Date To</label>
            <input type="date" id="endDateFilter" class="form-control" />
        </div>
        <div class="ms-auto">
            <button type="button" class="btn btn-success" id="exportExcelBtn">
                <i class="fas fa-file-excel me-2"></i> Export to Excel
            </button>
        </div>
    </div>

    <div class="table-container">
        <table id="reconciliationsTable" class="table display table-bordered table-striped w-100">
            <thead class="table-light">
                <tr>
                    <th>Business Name</th>
                    <th>MPAN</th>
                    <th>MPRN</th>
                    <th>Input EAC</th>
                    <th>Start Date</th>
                    <th>CED</th>
                    <th>CED(COT)</th>
                    <th>Payment Status</th>
                    <th>Cobana Final Reconciliation (£)</th>
                </tr>
            </thead>
            <tbody>               
            </tbody>
        </table>
    </div>
</div>

@section styles {
    <link href="~/Content/Accounts/ReconciliationsDashboard/ReconciliationsDashboard.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/Scripts/Accounts/ReconciliationsDashboard/reconciliationsDashboard.js"></script>
}
