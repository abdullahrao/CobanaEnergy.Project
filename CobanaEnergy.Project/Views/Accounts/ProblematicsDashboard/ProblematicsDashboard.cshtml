@model CobanaEnergy.Project.Models.Accounts.ProblematicsDashboard.ProblematicsDashboardViewModel
@{
    ViewBag.Title = "Problematics Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="problematics-dashboard">
    <div class="dashboard-title">
        Problematics Dashboard
    </div>
    <div class="filters d-flex flex-wrap gap-4 mb-4 align-items-end">
        <div>
            <label for="supplierFilter" class="form-label fw-semibold">Supplier</label>
            @Html.DropDownListFor(m => m.SupplierId, Model.Suppliers, "All Suppliers", new { @class = "form-select", id = "supplierFilter" })
        </div>
        <div>
            <label for="startDateFilter" class="form-label fw-semibold">Input Date From</label>
            <input type="date" id="startDateFilter" class="form-control" />
        </div>
        <div>
            <label for="endDateFilter" class="form-label fw-semibold">Input Date To</label>
            <input type="date" id="endDateFilter" class="form-control" />
        </div>
        <div class="ms-auto">
            <button type="button" class="btn btn-success" id="exportExcelBtn">
                <i class="fas fa-file-excel me-2"></i> Export to Excel
            </button>
        </div>
    </div>

    <div class="table-container">
        <form id="problematicsForm" autocomplete="off">
            @Html.AntiForgeryToken()

            <table id="problematicsTable" class="table table-bordered table-striped w-100">
                <thead class="table-light">
                    <tr>
                        <th data-orderable="false">Action</th>
                        <th class="no-sort" data-orderable="false"><input type="checkbox" id="checkAll" /></th>
                        <th>Business Name</th>
                        <th>MPAN</th>
                        <th>MPRN</th>
                        <th>Input EAC</th>
                        <th>Input Date</th>
                        <th>Start Date</th>
                        <th>CED</th>
                        <th>CED(COT)</th>
                        <th>Contract Status</th>
                        <th>Payment Status</th>
                        <th>Invoices</th>
                        <th>Supplier Cobana Invoice Notes</th>
                        <th>Cobana Final Reconciliation (£)</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
            <div class="invoice-summary-box mt-3">
                Contracts in Problematics: <span id="problematicsCount">0</span>
            </div>
            <div class="save-btn-wrapper text-end mt-3">
                <button type="button" class="btn btn-primary px-4" id="saveBtn" disabled>
                    Save <i class="fas fa-save ms-2"></i>
                </button>
            </div>
        </form>
    </div>
</div>

@section styles {
    <link href="~/Content/Accounts/ProblematicsDashboard/ProblematicsDashboard.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/Scripts/Accounts/ProblematicsDashboard/problematicsDashboard.js"></script>
}
