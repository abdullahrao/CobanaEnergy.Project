@{
    ViewBag.Title = "Accounts Calendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.AntiForgeryToken()

<div class="calendar-dashboard">
    <div class="calendar-header">Accounts Calendar</div>

    <div class="calendar-content">
        <div class="calendar-inline-picker" id="calendarFlatContainer"></div>

        <div class="table-container">
            <table id="calendarTable" class="table table-bordered table-striped w-100">
                <thead class="table-light">
                    <tr>
                        <th>Input Date</th>
                        <th>Payment Status</th>
                        <th>Contract Status</th>
                        <th>Pre-Sales Notes</th>
                        <th>Supplier Cobana Invoice Notes</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section styles {
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet" />
    <link href="~/Content/Accounts/CalendarDashboard/CalendarDashboard.css" rel="stylesheet" />
}

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="~/Scripts/Accounts/CalendarDashboard/calendarDashboard.js"></script>
}
