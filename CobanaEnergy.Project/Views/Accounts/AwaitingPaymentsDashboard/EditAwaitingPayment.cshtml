@model CobanaEnergy.Project.Models.Accounts.AwaitingPaymentsDashboard.EditAwaitingPaymentsViewModel
@{
    Layout = null;
}


<div class="modal fade invoice-supplier-modal" id="editAwaitingPaymentModal" tabindex="-1" aria-labelledby="editAwaitingPaymentModalLabel" aria-hidden="true">

    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0 rounded-4 elegant-popup-bg">
            <div class="modal-header border-0 pb-0">
                <h4 class="modal-title fw-bold d-flex align-items-center gap-2" id="editAwaitingPaymentModalLabel" style="font-family: Raleway, sans-serif;">
                    <i class="fas fa-comments text-primary"></i> Edit Awaiting Payments
                </h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body pt-0">
                <form id="editAwaitingPaymentForm" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="row gx-3 gy-3">
                        <input type="hidden" id="eid" name="EId" value="@Model.EId" />
                        <input type="hidden" id="contractType" name="ContractType" value="@Model.ContractType" />
                        <div class="col-12">
                            <label class="form-label" for="supplierCobanaInvoiceNotes">Supplier Cobana Invoice Notes</label>
                            <textarea id="supplierCobanaInvoiceNotes" class="form-control" rows="3">@Model.SupplierCobanaInvoiceNotes</textarea>
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-success px-4">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

