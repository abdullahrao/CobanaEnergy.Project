@model CobanaEnergy.Project.Models.Signup.UserDashboardViewModel


@{
    ViewBag.Title = "UserDashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="user-dashboard">
    <div class="dashboard-title">
        User Dashboard
    </div>

    <div class="table-container">
        <form id="userForm" autocomplete="off">
            @Html.AntiForgeryToken()

            <table id="userTable" class="table table-bordered table-striped w-100">
                <thead class="table-light">
                    <tr>
                        @*<th class="no-sort"><input type="checkbox" id="checkAll" /></th>*@
                        <th>Edit Role(s)</th>
                        <th>Enabled/Disabled</th>
                        <th>User Name</th>
                        <th>Roles</th>
                        <th>Status</th>
                        <th>Online Status</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Populated dynamically via AJAX -->
                </tbody>
            </table>
            <div class="save-btn-wrapper text-end mt-3">
                <button type="button" class="btn btn-primary px-4" id="saveBtn" disabled>
                    Save <i class="fas fa-save ms-2"></i>
                </button>
            </div>
        </form>
    </div>
</div>


<div class="modal fade" id="editUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-3 shadow form-container">
            <div class="modal-header">
                <h2 class="form-heading">Update User Role(s)</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="updateUserForm" method="post" class="form-horizontal" role="form">
                    <!-- Hidden Anti-forgery Token -->
                    @Html.AntiForgeryToken()

                    <!-- Hidden UserId -->
                    <input type="hidden" id="UserId" name="UserId" />

                    <div class="form-group mb-3">
                        <input type="text" id="UserName" name="UserName"
                               class="form-control"
                               placeholder="Username" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label for="roles" class="form-label">Roles</label>
                        <select id="roles" name="roles"
                                class="form-control" multiple required>
                            <!-- Roles dynamically inject via JS -->
                        </select>
                    </div>

                    <div class="modal-footer px-0">
                        <button type="button" class="btn btn-secondary mt-2" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary mt-2">Update Roles</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section styles {
    <link href="~/Content/Signup/userDashboard.css" rel="stylesheet" />
    <link href="~/Content/Signup/CreateUser.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/Scripts/Signup/userDashboard.js"></script>
}

