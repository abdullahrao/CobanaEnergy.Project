@model CobanaEnergy.Project.Models.Signup.UserProfileDashboardViewModel
@{
    ViewBag.Title = "User Profile Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Controls"))
{
    <div class="contract-dashboard">
        <h2 class="dashboard-title">User Profile Dashboard</h2>

        <div class="dashboard-wrapper">
            <!-- Left: Table -->
            <div class="left-panel">
                <div class="table-container">
                    <table id="userProfileTable" class="table display table-bordered table-striped w-100">
                        <thead>
                            <tr>
                                <th data-orderable="false">Action</th>
                                <th>Username</th>
                                <th>Job Title</th>
                                <th>Extension Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>
                                        <button class="btn btn-sm edit-btn" onclick="editUserProfile('@user.UserId')" title="Edit Profile">
                                            <i class="fas fa-pencil-alt me-1"></i> Edit
                                        </button>
                                    </td>
                                    <td>@user.UserName</td>
                                    <td>@user.JobTitle</td>
                                    <td>@user.ExtensionNumber</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @section styles {
        <link href="~/Content/PreSales/Dashboard.css" rel="stylesheet" />
        <link href="~/Content/Signup/UserProfileDashboard.css" rel="stylesheet" />
    }

    @section scripts {
        <script src="~/Scripts/Signup/userProfileDashboard.js"></script>
    }
}
else
{
    <div class="alert alert-danger text-center mt-5">
        <h4>Access Denied</h4>
        <p>You are not authorized to view this page.</p>
    </div>
}
